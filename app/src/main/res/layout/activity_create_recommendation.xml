<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryDark"
    tools:context=".CreateRecommendationActivity">

    <TextView
        android:id="@+id/lblNewRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/bebasfont"
        android:text="New Recommendation"
        android:textColor="@color/colorLightPink"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextClothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fontFamily="@font/bebasfont"
        android:inputType="textPersonName"
        android:text="Clothing..."
        android:textColor="@color/colorLightPink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNewRecommendation" />

    <EditText
        android:id="@+id/editTextConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/bebasfont"
        android:inputType="textPersonName"
        android:text="Conditions..."
        android:textColor="@color/colorLightPink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextClothing" />

    <EditText
        android:id="@+id/editTextMinimumTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/bebasfont"
        android:inputType="textPersonName"
        android:text="Minimum Temp."
        android:textColor="@color/colorLightPink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConditions" />

    <EditText
        android:id="@+id/editTextMaximumTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/bebasfont"
        android:inputType="textPersonName"
        android:text="Maximum Temp."
        android:textColor="@color/colorLightPink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMinimumTemp" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="151sp"
        android:layout_height="48sp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="156dp"
        android:background="@color/colorSecondaryDarker"
        android:text="Cancel"
        android:textColor="@color/colorLightPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnConfirm"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="151sp"
        android:layout_height="48sp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="156dp"
        android:background="@color/colorSecondaryDarker"
        android:text="Confirm"
        android:textColor="@color/colorLightPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>