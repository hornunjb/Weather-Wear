<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondaryDark">

    <TextView
        android:id="@+id/lblLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:fontFamily="@font/bebasfont"
        android:text="Location"
        android:textColor="@color/colorLightPink"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLocationPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bebasfont"
        android:text="test"
        android:textColor="@color/colorLightPink"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLocation" />

    <Button
            android:id="@+id/btnRecommendations"
            android:layout_width="151sp"
            android:layout_height="48sp"
            android:layout_marginBottom="272sp"
            android:text="Recommendations"
            android:textColor="@color/colorLightPink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorSecondaryDarker"
            />

    <TextView
        android:id="@+id/lblTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bebasfont"
        android:text="Temperature"
        android:textColor="@color/colorLightPink"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLocationPlaceholder" />

    <TextView
            android:id="@+id/lblTempPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTemperature"
            android:fontFamily="@font/bebasfont"
            android:textSize="20sp"
            android:textColor="@color/colorLightPink"/>

    <TextView
        android:id="@+id/lblConditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebasfont"
        android:text="Other Conditions"
        android:textColor="@color/colorLightPink"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecommendations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTempPlaceholder"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
            android:id="@+id/editTextTextMultiLine2"
            android:layout_width="327sp"
            android:layout_height="212sp"
            android:layout_marginBottom="36sp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRecommendations"
            app:layout_constraintVertical_bias="1.0"
            android:textColor="@color/colorLightPink"
            android:background="@color/colorSecondary"
            />

    <TextView
        android:id="@+id/lblConditionsPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebasfont"
        android:text="PlaceHolder"
        android:textAlignment="center"
        android:textColor="@color/colorLightPink"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecommendations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblConditions"
        app:layout_constraintVertical_bias="0.116" />

    </androidx.constraintlayout.widget.ConstraintLayout>